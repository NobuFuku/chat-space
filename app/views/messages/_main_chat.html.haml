.chat-main
  .chat-main__header
    .Board-box
      .Board-box__group
        = @group.name
        .Board-box__member-list
          Member:
          - @group.users.each do |user|
            = user.name

      = link_to edit_group_path(@group), class: "chat-main__edit" do
        Edit

        -# チャット
  .chat-main__message-list
    = render @messages
  
  -# フォーム
  .chat-main__footer
    = form_with model: [@group, @message], html: {class: "form"}, local: true do |f|
      .form-contents
        =f.text_field :content, class: 'form-contents__text', placeholder: "type a message"
        =f.label :image, class: "form-contents__image" do
          = icon('far', 'image')
          = f.file_field :image,class: 'form-contents__image__file'
      = f.submit 'Send', class: 'form__Btn'

