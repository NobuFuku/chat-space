.sidebar
  .sidebar-header
    .user-box
      .user-box__top-user
        = current_user.name
      
      .user-box__icons
        = link_to new_group_path, class: "user-box__icons--group" do
          = icon('far', 'edit',class:"icon__edit")
          %span<>

        = link_to edit_user_path(current_user), class: "user-box__icons--account" do
          = icon('fa', 'cog',class:"icon__cog")
          %span<>

  .sidebar__group-list
    - current_user.groups.each do |group|
      .sidebar-group
        = link_to group_messages_path(group) do
          .sidebar-group__title
            = group.name
          .sidebar-group__message
            = group.show_last_message

